.section10
	background-color #000
	background-size cover
	background-position center
	background-image url(../images/section10-bg.png), linear-gradient(to bottom, #000, transparent)
	padding 80px 0 100px

	&__header
		padding-bottom 40px
		color main-color
		font-size 20px

	&__desc
		padding-bottom 100px
		color #b2b3b3

.sec10-page
	&__header
		color #e1e4e9
		font-size 20px
		letter-spacing .8px
	
	&__author
		color #81868e
		font-family "Source Sans Pro"
		font-size 14px
		font-weight 300
		font-style italic
		text-transform uppercase
		letter-spacing 1.4px
		padding-bottom 20px

	&__stats
		color #464646
		font-family "Source Sans Pro"
		font-size 14px
		font-weight 300
		letter-spacing 1.4px
		padding-bottom 60px
	
	&__desc
		color #81868e
		font-size 14px
		line-height 25px
		letter-spacing .7px
		padding-bottom 50px
	
	&__read-more
		color #b2b3b3
		font-size 16px
		
		&:hover
			color #b2b3b3

.slick-active .sec10-slider__button
	background-color #b2b3b3

.sec10-slider
	&__button
		display inline-block
		margin 5px 0
		width 10px
		height 10px
		border-radius 50%
		border 1px solid #b2b3b3
		

		&:hover
			cursor pointer
