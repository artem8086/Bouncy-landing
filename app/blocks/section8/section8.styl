.section8
	background-color main-color

	&__header
		padding 80px 0 40px
		text-align center
		font-size 20px

	&__desc
		text-align center
		padding-bottom 60px

.sec8-page
	&__photo
		min-width 75%
		max-width 100%

.sec8-info
	text-align right
	padding 32px 0 32px 0
	max-height 364px
	overflow-y auto

	&__full-name
		color #464646
		font-size 20px
		letter-spacing .8px
		padding-bottom 14px
	
	&__role
		color #81868e
		font-family "Source Sans Pro"
		font-size 14px
		font-weight 300
		font-style italic
		text-transform uppercase
		letter-spacing 1.4px

	&__desc
		color #81868e
		text-align right
		font-size 14px

.sec8-diagrams
	width 100%
	padding 48px 0 0 21px

.progress-diagramm
	margin-bottom 36px

.sec8-slider
	padding-bottom 100px

.sec8-footer
	padding 58px 0
	background-color #000
	background-image url(../images/section8-footer.png)
	background-size cover
	background-position center

	&__text
		text-align center
		padding-bottom 28px
		color main-color
		letter-spacing .8px
		font-size 20px
		width 100%

// Scroll theme
.mCS-green.mCSB_scrollTools .mCSB_draggerRail
	background-color transparent

.mCS-green.mCSB_scrollTools .mCSB_dragger .mCSB_dragger_bar
	background-color transparent

.mCS-green.mCSB_scrollTools .mCSB_dragger:hover .mCSB_dragger_bar
	background-color #19bd9a

.mCS-green.mCSB_scrollTools .mCSB_dragger:active .mCSB_dragger_bar,
.mCS-green.mCSB_scrollTools .mCSB_dragger.mCSB_dragger_onDrag .mCSB_dragger_bar
	background-color #19bd9a

.mCS-green .mCSB_container
	margin-right 47px

