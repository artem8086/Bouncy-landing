.section8
	background-color main-color

	&__header
		padding 80px 0 40px
		text-align center
		font-size 20px

	&__desc
		text-align center
		padding-bottom 60px

.sec8-page
	&__photo
		max-width 100%

.sec8-person
	margin-top 30px
	padding-right 47px
	border-right 4px solid #19bd9a

	&__name
		color #464646
		font-size 20px
		letter-spacing .8px
	
	&__role
		color #81868e
		font-family "Source Sans Pro"
		font-weight 300
		font-style italic
		text-transform uppercase
		letter-spacing 1.4px

.sec8-info
	text-align right

	&__desc
		padding 32px 47px 0 0
		color #81868e
		text-align right
		font-size 14px

.sec8-diagrams
	width 100%
	padding 48px 47px 0 53px

.progress-diagramm
	margin-bottom 36px

.sec8-slider
	padding-bottom 100px

.slider
	&__paging
		padding-top 61px
		display flex
		justify-content center
		margin 0

		li
			display inline-block

			&.slick-active .slider__button
				background-color #19bd9a

	&__button
		display inline-block
		margin 0 5px
		width 10px
		height 10px
		border-radius 50%
		border 1px solid #19bd9a

.sec8-footer
	padding 58px 0
	background-color #000
	background-image url(../images/section8-footer.png)
	background-size cover
	background-position center

	&__text
		text-align center
		padding-bottom 28px
		color main-color
		letter-spacing .8px
		font-size 20px
		width 100%