.section12
	position relative
	background-color main-color
	background-size cover
	background-position center
	padding 80px 0 95px

	&::before
		@extends .before
		background-color #000
		opacity .8
	
	&>.container
		z-index 1

	&__header
		color main-color
		text-align center
		font-size 20px
		padding-bottom 40px

	&__desc
		text-align center
		padding-bottom 75px

.sec12-form
	&__email
		background-color transparent
		color #cfd3d4
		font-size 14px
		letter-spacing 0.14px
		border 1px solid #81868e
		padding 14px 22px
		margin 5px 0

		&::placeholder
			color #cfd3d4
			// font-size 14px
			// letter-spacing 0.14px
	
	&__submit
		border none
		outline none
		background-color #19bd9a
		color main-color
		font-size 14px
		text-transform uppercase
		letter-spacing 0.14px
		padding 15px 48px
		margin 5px 9px
