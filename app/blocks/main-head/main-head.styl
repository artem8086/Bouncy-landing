.before
	content ''
	display block
	width 100%
	height 100%
	position absolute
	left 0
	top 0

.main-head
	overflow hidden
	position relative
	display block
	width 100%
	height 100vh
	min-height 568px
	padding 45px 0 78px
	background-size cover
	background-position center

	&::before
		@extends .before
		background-color #000
		opacity .5

	.container
		z-index 1
		
.top-line
	&__logo
		padding 0
		vertical-align middle
		display inline-block
		font-family "Big John"
		font-size 25px
		// line-height 12px
		text-transform uppercase

.top-nav
	display inline-block
	padding 0
	text-align right
	
	&__link
		padding 3px 12px
		vertical-align middle
		color main-color
		text-align center
		font-size 16px
		
		&:hover
			text-decoration none 
			color gray-color

		&_active
			border 1px solid main-color
			border-radius 14px
			
			&:hover
				border-color gray-color

.main-content
	&__header-text
		padding-bottom 16px
		text-align center
		text-transform uppercase
		font-family "Source Sans Pro", sans-serif
		font-size 35px
		font-weight 300
		letter-spacing 7px

	&__content-text
		padding 0
		text-align center
		font-size 16px
		line-height 28px
		//letter-spacing 0.8px

.bot-line

	&__slider
		width 36px
		height 36px
		background-color #19bd9a
		border-radius 50%

		&::after
			width 100%
			height 100%
			text-align center
			vertical-align middle
			content 'îš„'
			transform-origin center
			transform rotate(90deg)
			line-height 36px
			font-family 'Pe-icon-7-stroke'
			font-size 30px
			display block
			color main-color
			
				

		&:hover
			background-color #14b07a
			text-decoration none
				