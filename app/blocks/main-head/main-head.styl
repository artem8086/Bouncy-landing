.before
	content ''
	display block
	width 100%
	height 100%
	position absolute
	left 0
	top 0

.main-head
	overflow hidden
	position relative
	width 100%
	height 100vh
	min-height 568px
	padding 45px 0 78px
	background-size cover
	background-position center

	&::before
		@extends .before
		background-color #000
		opacity .5

	&>.container
		z-index 1
		
.top-line
	&__logo
		padding 0
		vertical-align middle
		display inline-block
		font-family "Big John"
		font-size 25px
		// line-height 12px
		text-transform uppercase

#top-nav__toggle
	position absolute
	top 0
	left 0
	visibility hidden

@media (min-width: 768px)
	.toggle-container
		display none
		

	.main-nav
		display inline-block
		z-index 2
		float right
		padding 0
		
		&__link
			padding 3px 12px
			vertical-align middle
			color main-color
			text-align center
			font-size 16px
			
			&:hover
				text-decoration none 
				color #c3c3c3

			&_active
				border 1px solid main-color
				border-radius 14px
				
				&:hover
					border-color #c3c3c3

@media (max-width: 768px)
	$items = 6
	$transition-duration = 0.5s
	$transition-delay = 0.05s
	.top-nav
		position absolute
		overflow hidden
		margin-top -20px
		z-index 2
		width 100%
		text-align right

	/* Toggle functionality */
	// To hide the checkbox
	#top-nav__toggle
		&:focus
			& ~ .toggle-container .toggle-container__button
				box-shadow: 0 0 0 8px rgba(0, 0, 0, 0.1), inset 0 0 0 20px rgba(0, 0, 0, 0.1)
		// Styles for the 'open' state, if the checkbox is checked
		&:checked
			// Any element you need to change the style if menu is open goes here, using the sibling selector (~) as follows
			// Making the "X" icon using `:before` and `:after` pseudo-elements

			& ~ .toggle-container .toggle-container__button
					box-shadow: 0 0 0 550px rgba(0, 0, 0, 0.75), inset 0 0 0 20px rgba(0, 0, 0, 0.9), 0 0 0 8px rgba(0, 0, 0, 0.1), inset 0 0 0 20px rgba(0, 0, 0, 0.9)
					&:before
						transform: translateY(-50%) rotate(45deg) scale(1)
					&:after
						transform: translateY(-50%) rotate(-45deg) scale(1)
			// Open nav
			& ~ .main-nav
				margin-bottom: 100px
				pointer-events: auto
				transform: translate(calc(80px - 100%), 50px)
				// Restoring nav items from "lines" in the menu icon
				.main-nav__link
					color: main-color
					letter-spacing: 0
					height: 40px
					line-height: 40px
					margin-top: 0
					opacity: 1
					transform: scaleY(1)
					transition: $transition-duration, opacity 0.1s
					&:hover
						text-decoration none

					// Setting delays for the nav items in open transition
					for $i in (1)..($items)
						&:nth-child({$i})
							$delay = ($items - $i) * $transition-delay
							transition-delay: $delay
							&::before
								transition-delay: $delay
					// Hiding the lines
					&::before
						opacity: 0
	/* Toggle button */
	.toggle-container
		&__button
			position: absolute
			top 0
			right 0
			width: 20px
			height: 20px
			margin: 25px
			background-color: transparent
			border: none
			cursor: pointer
			border-radius: 100%
			transition: ($transition-duration + 0.1)
			// Shadow
			box-shadow: 0 0 0 8px rgba(0, 0, 0, 0.1), inset 0 0 0 20px rgba(0, 0, 0, 0.1)	
			// Making the "X" icon using `:before` and `:after` pseudo-elements
			// Initially hidden because `scale(0)` transformation
			&:before, &:after
				position: absolute
				content: ''
				top: 50%
				left: 0
				width: 100%
				height: 2px
				background-color: main-color
				border-radius: 5px
				transition: $transition-duration
			&:before
				transform: translateY(-50%) rotate(45deg) scale(0)
			&:after
				transform: translateY(-50%) rotate(-45deg) scale(0)
	/* Menu */
	.main-nav
		text-align right
		display: inline-block
		margin: 25px 25px 20px
		// Don't want pointer-events as menu is closed
		pointer-events: none
		transition: $transition-duration
		// Showing nav items as lines, making up the hamburger menu icon
		&__link
			position: relative
			display: inline-block
			float: right
			clear: both
			color: transparent
			font-size: 16px
			letter-spacing: -6.2px
			height: 7px
			line-height: 7px
			text-transform: uppercase
			white-space: nowrap
			transform: scaleY(0.2)
			transition: $transition-duration, opacity 1s
			// Setting delays for the nav items in close transition
			for $i in (1)..($items)
				&:nth-child({$i})
					$delay = ($i - 1) * $transition-delay
					transition-delay: $delay
					&::before
						transition-delay: $delay
			// Adjusting width for the first line
			&:nth-child(1)
				letter-spacing: -8px
			// Adjusting width for the second line
			&:nth-child(2)
				letter-spacing: -7px
			// Adjusting from the fourth element onwards
			&:nth-child(n + 4)
				letter-spacing: -8px
				margin-top: -7px
				opacity: 0
			// Getting the lines for the hamburger menu icon
			&::before
				position: absolute
				content: ''
				top: 50%
				left: 0
				width: 100%
				height: 2px
				background-color: main-color
				transform: translateY(-50%) scaleY(5)
				transition: $transition-duration
			
			&_active
				text-decoration underline

.main-content
	&__header-text
		padding-bottom 16px
		text-align center
		text-transform uppercase
		font-family "Source Sans Pro", sans-serif
		font-size 35px
		font-weight 300
		letter-spacing 7px

	&__content-text
		padding 0
		text-align center
		font-size 16px
		line-height 28px
